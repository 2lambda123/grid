{
    "defaultStacks": ["media-service"],
    "packages": {
        "lambda": {
            "type": "aws-lambda",
            "data": {
                "functions": {
                    "TEST": {
                        "name": "@TEST_ARN"
                    },
                    "PROD": {
                        "name": "@PROD_ARN"
                    }
                },
                "bucket": "media-service-dist"
            }
        }
    },
    "recipes": {
        "default": {
            "depends": [
                "artifactUploadOnly",
                "updateLambda"
            ]
        },
        "artifactUploadOnly": {
            "actions": ["lambda.uploadArtifacts"]
        },
        "updateLambda": {
            "actions": ["lambda.updateLambda"]
        }
    }
}
